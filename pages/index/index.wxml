<view class="index-container">
  <!-- 轮播图 -->
  <swiper class="banners" indicator-dots indicator-color="ivory" indicator-active-color="#d43c33">
    <swiper-item wx:for="{{bannerList}}" wx:key="bannerId">
      <image src="{{ item.pic }}" lazy-load></image>
    </swiper-item>
  </swiper>
  <!-- 五个图标导航区域 -->
  <view class="nav-container">
    <view class="nav-item" bindtap="toRecommendSong">
      <text class="iconfont icon-tuijian"></text>
      <text>每日推荐</text>
    </view>
    <view class="nav-item" bindtap="toOtherPage">
      <text class="iconfont icon-yinleyinpu"></text>
      <!-- <text>歌单</text> -->
      <text>Other</text>
    </view>
    <view class="nav-item">
      <text class="iconfont icon-paihangbang"></text>
      <text>排行榜</text>
    </view>
    <view class="nav-item">
      <text class="iconfont icon-diantai"></text>
      <text>电台</text>
    </view>
    <view class="nav-item">
      <text class="iconfont icon-zhibo-"></text>
      <text>直播</text>
    </view>
  </view>

  <!-- 推荐歌曲区域 -->
  <view class="recommend-container">
    <NavHeader title="推荐歌曲" nav="为你精心推荐"></NavHeader>
    <!-- 内容区 -->
    <scroll-view class="recommend-scroll-view" enable-flex scroll-x>
      <view class="scroll-item" wx:for="{{recommendedSongList}}" wx:key="id" wx:for-item="recommendedSongItem">
        <image src="{{recommendedSongItem.picUrl}}" lazy-load></image>
        <text>{{recommendedSongItem.name}}</text>
      </view>
    </scroll-view>
  </view>

  <!-- 排行版区域 -->
  <view class="top-list">
    <!-- 头部区域 -->
    <NavHeader title="排行榜" nav="热歌风向标"></NavHeader>
    <!-- 内容区域 -->
    <swiper class="top-list-swiper" circular next-margin="50rpx" previous-margin="50rpx">
      <swiper-item wx:for="{{rankingList}}" wx:key="name">
        <view class="title">{{item.name}}</view>
        <view class="swiper-item" wx:for="{{item.tracks}}" wx:key="id" wx:for-item="tracksItem"
          wx:for-index="tracksItemIndex">
          <view class="music-item">
            <image src="{{tracksItem.al.picUrl}}"></image>
            <text class="count">{{tracksItemIndex+1}}</text>
            <text class="music-name">{{tracksItem.name}}</text>
          </view>
        </view>
      </swiper-item>
    </swiper>
  </view>

</view>