.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

.nav-container {
  display: flex;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.iconfont {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  background-color: rgb(240, 19, 19);
  margin: 20rpx 0rpx;
  font-size: 50rpx;
}

.recommend-container {
  padding: 20rpx;
}

.recommend-container .header {
  padding-bottom: 20rpx;
}

.recommend-container .header .title {
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}

.recommend-container .header .more {
  float: right;
  border: 1rpx solid #333;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}

/* 推荐内容区 */
.recommend-scroll-view {
  display: flex;
  height: 300rpx;
}

.scroll-item {
  width: 200rpx;
  margin-right: 20rpx;
}

.scroll-item text {
  display: block;
  font-size: 26rpx;
  /* 单行文本溢出 */
  /* overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */

  /* d多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.scroll-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

/* 排行版区域 */
.top-list {
  padding: 20rpx;
}

.top-list-swiper {
  height: 400rpx;
}

 .swiper-item {
  width: 96%;
  background: #fbfbfb;
}

.swiper-item .title {
  font-size: 30rpx;
  line-height: 80rpx;
}

.music-item {
  display: flex;
  margin-bottom: 20rpx;
}

.music-item image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 6rpx;
}

.music-item .count {
  height: 100rpx;
  width: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.music-item .music-name {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}