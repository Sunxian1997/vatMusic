<view class="personalContainer">
    <view class="user-section">
        <image class="bg" src="{{userInfo.backgroundUrl?userInfo.backgroundUrl:'/static/images/personal/bgImg2.jpg'}}">
        </image>
        <view class="user-info-box" bindtap="toLogin">
            <view class="portrait-box">
                <image class="portrait"
                    src='{{userInfo.avatarUrl ? userInfo.avatarUrl : "/static/images/personal/missing-face.png"}}'>
                </image>
            </view>
            <view class="info-box">
                <text class="username">{{userInfo.nickname ? userInfo.nickname : "游客"}}</text>
            </view>
        </view>

        <view class="vip-card-box">
            <image class="card-bg" src="/static/images/personal/personBacImg.jpeg" mode=""></image>
            <view class="b-btn">
                立即开通
            </view>
            <view class="tit">
                <!-- 会员图标-->
                <image src="http://p5.music.126.net/obj/wovDmcKXw6PCn2_CmsOk/4189728861/dc4e/2b9c/7677/20a6644c6e3a093d7accce919ae7b169.png" mode="scaleToFill"></image>
                <text style="margin-left:20rpx">网易云会员</text>
            </view>
            <text class="e-m">{{userInfo.nickname}}</text>
            <text class="e-b">开心听歌</text>
        </view>
    </view>

    <view class="cover-container" bindtouchstart="handleTouchStart" bindtouchmove="handleTouchMove"
        bindtouchend="handleTouchEnd" style="transform: {{coverTransform}};transition: {{coverTransition}};">
        <image class="arc" src="/static/images/personal/arc.png"></image>
        <!-- 个人中心导航 -->
        <view class="nav-section">
            <view class="nav-item" hover-class="common-hover" hover-stay-time="50">
                <text class="iconfont icon-xiaoxi"></text>
                <text>我的消息</text>
            </view>
            <view class="nav-item" hover-class="common-hover" hover-stay-time="50">
                <text class="iconfont icon-myRecommender"></text>
                <text>我的好友</text>
            </view>
            <view class="nav-item" hover-class="common-hover" hover-stay-time="50">
                <text class="iconfont icon-gerenzhuye"></text>
                <text>个人主页</text>
            </view>
            <view class="nav-item" hover-class="common-hover" hover-stay-time="50">
                <text class="iconfont icon-gexingzhuangban"></text>
                <text>个性装扮</text>
            </view>
        </view>

        <!-- 个人中心列表 -->
        <view class="personalContent">
            <view class="recentPlayContainer">
                <text class="title">最近播放</text>
                <!-- 最近播放记录 -->
                <scroll-view scroll-x enable-flex class="recent-scroll" wx:if="{{recentPlayList.length}}">
                    <view class="recent-item" wx:for="{{recentPlayList}}" wx:for-item="recentPlayItem" wx:key="id">
                        <image src="{{recentPlayItem.song.al.picUrl}}"></image>
                    </view>
                </scroll-view>
                <!-- 暂无播放记录 -->
                <view wx:else>暂无播放记录</view>
            </view>

            <view class="cardList">
                <view class="card-item">
                    <text class="title">我的音乐</text>
                    <text class="more"> > </text>
                </view>
                <view class="card-item">
                    <text class="title">我的收藏</text>
                    <text class="more"> > </text>
                </view>
                <view class="card-item">
                    <text class="title">我的电台</text>
                    <text class="more"> > </text>
                </view>
            </view>
        </view>
    </view>

</view>