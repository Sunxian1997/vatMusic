/* 头搜索区域 */
.searchContainer {
    padding: 0rpx 20rpx;
}

.header {
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0rpx;
}

.searchInput {
    flex: 1;
    background: rgba(237, 237, 237, 0.3);
    border-radius: 30rpx;
}

.cancle {
    width: 100rpx;
    text-align: center;
}

.searchIcon {
    position: absolute;
    top: 4rpx;
    left: 15rpx;
}

.guanbiIcon {
    position: absolute;
    top: 4rpx;
    right: 130rpx;
}

.searchInput input {
    padding: 0 50rpx;
}

.placeholder {
    font-size: 28rpx;
}

/* 热搜榜 */
.hotContainer .title {
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}

.hotList {
    display: flex;
    flex-wrap: wrap;
}

.hotItem {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}

.hotItem .order {
    margin: 0rpx 10rpx;
}

.hotItem image {
    width: 35rpx;
    height: 20rpx;
    line-height: 20rpx;
    padding-left: 10rpx;
}

/* 搜索内容展示区 */
.searchContent {
    color: rgba(107, 100, 238, 0.96);
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid var(--themeColor);
}

.searchItem {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}

.searchItem .content {
    flex: 1;
    margin-left: 24rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
}

/* 搜索的历史记录 */
.history {
    display: flex;
    flex-wrap: wrap;
    position: relative;
}

.history .title {
    font-size: 28rpx;
    height: 50rpx;
}

.history .historyItem {
    margin-left: 20rpx;
    border-radius: 20rpx;
    padding: 0 30rpx;
    margin-bottom: 20rpx;
    background-color: #eee;
}

.history .title {
    font-size: 26rpx;
}

.history .historyItemGuanbi {
    font-size: 26rpx;
    margin-left: 15rpx;
}

.history .detele {
    position: absolute;
    bottom: 10rpx;
    right: 15rpx;
    font-size: 26rpx;
}